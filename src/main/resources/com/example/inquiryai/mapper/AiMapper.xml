<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.inquiryai.mapper.AiMapper">
    <insert id="insertMsg" parameterType="com.example.inquiryai.model.Chat">
          INSERT INTO message(chatId,msg) VALUES (#{chatId},#{msg})
    </insert>
    <insert id="insertHistory" parameterType="com.example.inquiryai.model.Chat">
        INSERT INTO inquiryai(chatId, msg) VALUES (#{chatId},#{msg})
    </insert>
    <select id="getMessage" resultType="com.example.inquiryai.model.Message">
        SELECT * FROM message where chatId=#{chatId}
    </select>
</mapper>